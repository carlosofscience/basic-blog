<h1>Blog Posts</h1>

<% @posts.each do |post| %>

  <div class="post">
    <h3> <%= post.title %> </h3>
    <p> <%= post.body %> </p>
    <p class="category-tags">
    <% post.categories.split.each do |category| %>
      <span class="tag"> <%= category %> </span><br>
    <% end %>
    </p>
    <%= link_to "More", post_path(post), :class => 'btn' %>
  </div>
<% end %>