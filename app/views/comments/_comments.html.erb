<h3>Comments</h3>
<div class="comments">
<!-- Iterating for each comment with within the selected post-->
<% @post.comments.each do |comment| %>
  <%if (comment.id)%>
    <div class="comment">
      <p> <strong> <%= comment.username %> </strong> </p>
      <p> <%= comment.body %> </p>
      <span class="date"> <%= comment.created_at %> </span>
      <%= link_to "x", [comment.post, comment],
      method: :delete,
      data: {confirm: 'Are you sure you want to delete this comment?'}, #adding confirmationda ta
      :class => 'btn danger' %>
    </div>
  <% end %>
<% end %>
</div>

